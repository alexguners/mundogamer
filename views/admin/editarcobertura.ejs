<!DOCTYPE html>

<% include admin-header %>   
 <% if (message.length>0) { %>
        <div class="alert alert-success"><%= message %></div>
    <% } %>
          <div class="row-fluid">
                <div id="dashboard-left" class="span8">
                     <div class="panel panel-primary"> 
                        <div class="panel-body">
          				   <form id="LoginForm" role="form" class="form-horizontal" autocomplete="off"  method="post">
                                <!-- Id da cobertura -->
                                <input type="hidden" value="<%= cobertura.id %>" name="id" />

                                    <!-- Campo Nome da cobertura -->
                                    <p>
                                      <label>Nome do evento&nbsp;</label>
                                      <input type="text" class="input-block-level" id="nome_evento" name="nome_evento" placeholder="Nome do evento" required="required" value="<%= cobertura.nome_evento %>"/>
                                    </p>
                                    <!-- Fim do Campo Nome da cobertura -->

                                    <!-- Editor de texto da descrição da cobertura-->
                                    <p>
                                      <label><h4 class="widgettitle">Descrição do evento</h4></label>                    
                                      <textarea  class="ckeditor" name="editor1" id="editor1"><%= cobertura.descricao %></textarea>                           
                                    </p>
                                    <!-- Fim do  Editor de texto da descrição da cobertura-->

                                    <!-- Botão de Cadastrar -->
                                    <p>
                                      <center>
                                        <button id="SubmitBtn" name="SubmitBtn" type="submit" class="btn btn-large btn-inverse">Editar Evento</button>
                                       </center>
                                    </p>      
            				</form>
        			   </div>
        		   </div>         
                </div>
           </div>
            <!-- Place inside the <head> of your HTML -->

        <script src="/editor/ckeditor.js"></script>
        <script type="text/javascript" src="/admin/js/jquery.min.js"></script> 
        <script type="text/javascript" src="/admin/js/jquery.validate.min.js"></script>
        <script type="text/javascript" src="/admin/js/bootstrap.min.js"></script>
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <script type="text/javascript">

        	jQuery(document).ready(function(){
        		
        		jQuery('.taglist .close').click(function(){
        			jQuery(this).parent().remove();
        			return false;
        		});
        		
        	});
        </script>


<% include admin-footer %>    


