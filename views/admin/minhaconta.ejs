            });
        $(document).on('mouseover', '#sobrepsnid', function(){
            $('#sobrepsnid').popover('show');
        });
        $(document).on('mouseleave', '#sobrepsnid', function(){
            $('#sobrepsnid').popover('hide');
        });

        $('#sobrexboxlive').popover({
        html : true,
        trigger : 'manual',
        content : function() {
            return '<div class="box">A gamertag é o seu ID de identificação na Xbox Live que permite conhecer novos amigos e o compartilhamento de informações de conquistas.<br>Exemplo a seguir:<br><br><center><img src="/home/images/footer/xboxid.png"</center></div>';
