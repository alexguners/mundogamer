       $('#sobrepsnid').popover({
        html : true,
        trigger : 'manual',
        content : function() {
            return '<div class="box">Crie seu ID portátil da PSN, permitindo assim a visualização de seu ID e suas conquistas pelos visitantes do Mundo Gamer como na imagem a seguir:<br><br><center><img src="/home/images/footer/idpsn.png"</center></div>';
