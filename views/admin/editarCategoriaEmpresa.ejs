<!DOCTYPE html>

<% include admin-header %>   
 <% if (message.length>0) { %>
        <div class="alert alert-success"><%= message %></div>
    <% } %>
          <div class="row-fluid">
            <div id="dashboard-left" class="span8">
             <div class="panel panel-primary"> 

                <div class="panel-body">
  					        <form id="LoginForm" role="form" class="form-horizontal" autocomplete="off"  method="post">
                                <!-- Id da categoria -->
                                <input type="hidden" value="<%= categoriaempresa.id %>" name="id" />

                                    <!-- Campo Nome da categoria -->
                                    <p>
                                     <label for="titulo">Nome da Categoria</label>
                                      <input type="text" class="input-block-level" id="nome_categoria" name="nome_categoria" placeholder="Nome da Categoria" required="required" value="<%= categoriaempresa.nome_categoria %>"/>
                                    </p>
                                    <!-- Fim do Campo Nome da categoria -->

                                    <!-- Editor de texto da descrição da categoria-->
                                    <p>
                                      <label><h4 class="widgettitle">Descrição da categoria</h4></label>                    
                                      <textarea  class="ckeditor" name="editor1" id="editor1"><%= categoriaempresa.descricao_categoria %></textarea>                           
                                    </p>
                                    <!-- Fim do  Editor de texto da descrição da categoria-->

                                    <!-- Botão de Cadastrar -->
                                    <p>
                                      <center>
                                        <button id="SubmitBtn" name="SubmitBtn" type="submit" class="btn btn-large btn-inverse">Salvar Alterações</button>
                                       </center>
                                    </p>  

    						    </form>
			    </div>
			</div>         
           </div>
        </div>
                <!-- Place inside the <head> of your HTML -->

        <script src="/editor/ckeditor.js"></script>
        <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script type="text/javascript" src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js"></script>
        <script src="//connect.facebook.net/pt_BR/all.js"></script>
        <script type="text/javascript">

        	jQuery(document).ready(function(){
        		
        		jQuery('.taglist .close').click(function(){
        			jQuery(this).parent().remove();
        			return false;
        		});
        		
        	});
        </script>


<% include admin-footer %>    


