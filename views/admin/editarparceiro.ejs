<!DOCTYPE html>

<% include admin-header %>   
 <% if (message.length>0) { %>
        <div class="alert alert-success"><%= message %></div>
    <% } %>
          <div class="row-fluid">
            <div id="dashboard-left" class="span8">
             <div class="panel panel-primary"> 

                <div class="panel-body">
  					        <form id="LoginForm" role="form" class="form-horizontal" autocomplete="off"  method="post">
                    <!-- Id do Parceiro -->
                    <input type="hidden" value="<%= parceiro.id %>" name="id" />

                        <!-- Campo Nome do Parceiro -->
                        <p>
                          <label>Nome do Parceiro&nbsp;</label>
                          <input type="text" class="input-block-level" id="nome_parceiro" name="nome_parceiro" placeholder="Nome do parceiro" required="required" value="<%= parceiro.nome_parceiro %>"/>
                        </p>
                        <!-- Fim do Campo Nome do Parceiro -->

                        <!-- Campo Nome do Responsável -->
                        <p>
                          <label>Nome do Responsável&nbsp;</label>
                          <input type="text" class="input-block-level" id="nome_responsavel" name="nome_responsavel" placeholder="Nome do Responsável" required="required" value="<%= parceiro.nome_responsavel %>" />
                        </p>
                        <!-- Fim do Campo Nome do Parceiro -->

                        <!-- Campo Nome do Parceiro -->
                        <p>
                          <label>E-mail de contato&nbsp;</label>
                          <input type="text" class="input-block-level" id="email_contato" name="email_contato" placeholder="Digite o e-mail de contato" required="required" value="<%= parceiro.email_contato %>" />
                        </p>
                        <!-- Fim do Campo Nome do Parceiro --> 
                    

                        <!-- Parceiro da notícia-->
                        <p>
                            <label>Categoria:</label>
                                <select name="categoria" id="categoria" required="required" >
                                  <option value="<%= parceiro.categoria %>"><%= parceiro.categoria %></option>
                                    <option value="Blog">Blog</option>
                                    <option value="Site">Site</option>                                
                                    <option value="Loja">Loja</option>
                                    <option value="Página no Facebook">Página Facebook</option>
                                    <option value="Outros">Outros</option>
                                </select> 

                        </p>
                        <!-- Fim do Parceiro da notícia -->

                        <!-- Campo Site do Parceiro -->
                        <p>
                          <label>Site</label>
                          <input type="text" class="input-block-level" id="site " name="site" placeholder="http://meusite.com" value="<%= parceiro.site%>"/>
                        </p>
                        <!-- Fim do Campo Site do Parceiro -->

                        <!-- Campo Twitter do Parceiro -->
                        <p>
                           <label>Perfil Twitter</label>
                           <div class="input-prepend">
                              <span class="add-on">@</span>
                                  <input type="text"  placeholder="@Usuário" id="twitter" name="twitter" class="input-block-level" value="<%= parceiro.twitter %>" />
                           </div>
                        </p>
                        <!-- Fim Campo Twitter do Parceiro -->

                        <!-- Campo Facebook do Parceiro -->
                        <p>
                           <label>Página Facebook</label>
                          <div class="input-prepend">
                              <span class="add-on">www.facebook.com/</span>
                                <input type="text" name="facebook" id="facebook" class="input-block-level" placeholder="Nome da Página" value="<%= parceiro.facebook %>" />
                           </div>
                           
                        </p>
                        <!-- FIM do Campo Facebook do Parceiro -->

                        <!-- Campo Instagram do Parceiro -->
                        <p>
                           <label>Instagram</label>
                           <div class="input-prepend">
                              <span class="add-on">www.instagram.com/</span>
                           <input type="text" name="instagram" id="instagram" class="input-block-level" placeholder="Endereço Instagram" value="<%= parceiro.instagram%>" />
                           </div>
                        </p>
                        <!-- Fim do Campo Instagram do Parceiro -->

                        <!-- Campo Canal do Youtube do Parceiro -->
                        <p>
                          <label>Canal Youtube</label>
                          <div class="input-prepend">
                              <span class="add-on">www.youtube.com/</span>
                          <input type="text" name="canal_youtube" id="canal_youtube" class="input-block-level" placeholder="Endereço do canal" value="<%= parceiro.canal_youtube %>"/>
                          </div>
                        </p>
                        <!-- Fim do Campo Canal do Youtube do Parceiro -->

                        <p>
                          <label><h4 class="widgettitle">Cadastre um conteúdo de descrição para o jogo</h4></label>                    
                          <textarea  class="ckeditor" name="editor1" id="editor1"><%= parceiro.descricao_parceiro %></textarea>                           
                        </p>


                        <!-- Botão de Cadastrar -->
                        <p>
                          <center>
                            <button id="SubmitBtn" name="SubmitBtn" type="submit" class="btn btn-large btn-inverse">Editar Parceiro</button>
                           </center>
                        </p>      
    						    </form>
						    </div>
						 </div>         
            </div>

            <div class="span4">
             <% if (typeof user.local.tipo !== 'undefined'){ %>
                <% if (user.local.tipo == 'Administrador'){ %> 

                    <div class="alert alert-info" role="alert">
                      <small>Cadastrado por<strong> <%= parceiro._criador.local.nome %></strong></small>
                    </div><!--alert-->
                    <ul class="media-list">
                      <li class="media">
                        <div class="pull-left">
                          <img src='https://graph.facebook.com/<%=parceiro._criador.facebook.id%>/picture?type=normal' alt='Imagem de perfil'/>
                        </div>
                        <div class="media-body">
                          <small>
                            E-mail: <%= parceiro._criador.local.email %><br>
                            Mora em: <%= parceiro._criador.facebook.location %><br>
                            Cadastrado <% var d = new Date(parceiro._criador.local.created_at); 
                              %>no dia <%= ('0' + d.getDate()).slice(-2) + '/' + ('0' + (d.getMonth()+1)).slice(-2) + '/'  + d.getFullYear() %> às <%= ('0' + (d.getHours())).slice(-2) + ':' + ('0' + (d.getMinutes())).slice(-2) %><br>
                            Créditos disponíveis: <%= parceiro._criador.local.credits %><br>
                            Total de publicações:<br>
                          </small>
                          <center><a href="" class="btn btn-primary btn-rounded">Enviar Mensagem</a></center>
                        </div>
                      </li>
                    </ul>
                      <br>
                <%}%>
             <%}%>   
              <ins class="adsbygoogle"
               style="display:inline-block;width:300px;height:250px"
               data-ad-client="ca-pub-0061672681197040"
               data-ad-slot="1898201088"></ins>
              <!-- Mundo Gamer Administrativo -->
            </div>
        </div>
