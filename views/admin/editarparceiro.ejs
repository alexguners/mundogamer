    <script src="/editor/ckeditor.js"></script>
    <script type="text/javascript" src="/admin/js/jquery.min.js"></script> 
    <script type="text/javascript" src="/admin/js/jquery.validate.min.js"></script>
    <script type="text/javascript" src="/admin/js/bootstrap.min.js"></script>
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script type="text/javascript">

            // Adsense
    (adsbygoogle = window.adsbygoogle || []).push({});

    	$(document).ready(function () {
    var data_cadastro = $("#data_cadastro");
    var nome_parceiro = $("#nome_parceiro");
    var categoria = $("#categoria");
    var LoginForm = $('#LoginForm');
    var SubmitBtn = $('#SubmitBtn');
 
    LoginForm.validate();
 
    data_cadastro.rules("add", {
      required: true,
      length: 9,
      messages: {
        required: "Você deve preencher data de cadastro",
        rangelength: "Data inválida"
      }
    });
    nome_parceiro.rules("add", {
      required: true,
      messages: {
        required: "Nome do parceiro é obrigatório."
      }
    });
      categoria.rules("add", {
      required: true,
      messages: {
        required: "Escolher categoria é obrigatório."
      }
    });
 
    $('#LoginForm').submit(function () {
      if ($(this).valid()) {
        $('#SubmitBtn').prop('disabled', true);
        return true;
      }
      return false;
    });
 
  });
	</script>

