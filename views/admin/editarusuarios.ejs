<!doctype html>
<% include admin-header %>   
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form action="/mg-admin/users/edit" method="post">
	<input type="hidden" value="<%= userEdit._id %>" name="id" />

	<div class="form-group">
			<label>Nome</label>
			<input type="text" class="form-control" name="nome" required="required" value="<%=userEdit.local.nome%>">
		</div>
		<div class="form-group">
			<label>Email</label>
			<input type="text" class="form-control" name="email" required="required" value="<%=userEdit.local.email%>">
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" name="password" required="required">
		</div>
		<div class="form-group">
                    <p>
                        <label>Tipo de Usu√°rio:</label>
                            <span class="formwrapper">
                              <input type="radio" name="tipo" id="tipo" value="Administrador"/> Administrador &nbsp; &nbsp;
                              <input type="radio" name="tipo" id="tipo" value="Colaborador" <%- 'checked'%> /> Colaborador&nbsp; &nbsp;
                            </span>
                    </p>
         </div>

		<button type="submit" class="btn btn-warning btn-lg">Salvar</button>
	</form>

</div>

</div>
<script type="text/javascript"
     src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js">
    </script> 
    <script type="text/javascript"
     src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.12.0/jquery.validate.min.js">
    </script>
<% include admin-footer %>    