<!DOCTYPE html>

<% include admin-header %>   
 <% if (message) { %>
        <div class="alert alert-success"><%= message %></div>
    <% } %>
          <div class="row-fluid">
            <div id="dashboard-left" class="span8">
	 					 <div class="panel panel-primary">  
						    <div class="panel-body">
  						    <form id="LoginForm" role="form" class="form-horizontal" enctype="multipart/form-data" autocomplete="off"  method="post">

                    <!-- Imagem de Logomarca da empresa -->
                    <center>
                      <div class="par">
                          <label>Logomarca da empresa (Tamanho recomendado 300x200 até 100k)</label>
                          <div class="fileupload fileupload-new" data-provides="fileupload">
                            <div class="fileupload-preview thumbnail" style="width: 300px; height: 200px;"></div>
                            <div class="input-append">
                                <div class="uneditable-input span3">
                                  <i class="iconfa-file fileupload-exists"></i>
                                  <span class="fileupload-preview"></span>
                                </div>
                                <span class="btn btn-file"><span class="fileupload-new">Selecione uma imagem</span>
                                <span class="fileupload-exists">Alterar</span>
                                <input type="file" accept="image/*" class="form-control" id="capa_empresa" name="capa_empresa" required="required" /> 
                                <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remover</a>
                            </div>
                          </div>
                     </div>                                         
                    </center> 
                    <!-- Fim da Logomarca da empresa -->

                    <!-- Nome da emoresa -->
                    <label>Nome da empresa</label>
                    <input type="text" class="input-block-level" id="nome_empresa" name="nome_empresa" placeholder="Digite o nome do empresa" required="required" />
                    <!-- Fim Nome do empresa -->

                    <!-- E-mail para contato -->
                    <label>E-mail para contato</label>
                    <input type="text" class="form-control" id="email" name="email" placeholder="E-mail para contato" />
                    <span class="help-block"></span>  
                   <!-- E-mail para contato  --> 


                    <!-- Ano de Fundação -->
                   <label>Ano de fundação</label>
                   <input type="text" name="ano_fundacao" id="ano_fundacao" maxlength="10" placeholder="2015"/>
                    <!-- Fim Data de Lançamento -->

                    <!-- Localização -->
                   <label>Localização</label>
                   <input type="text" name="localizacao" id="localizacao" maxlength="10" placeholder="Nome da Cidade"/>
                    <!-- Localização -->

                     <!-- Site oficial da empresa -->
                    <label>Site oficial</label>
                    <input type="text" class="form-control" id="site" name="site" placeholder="Site oficial da empresa" />
                    <span class="help-block"></span>  
                   <!-- Fim do Site oficial do empresa --> 


                    <!--  tipo de empresa -->
                    <label>Selecione o tipo de empresa</label>
                    <input type="text" data-role="tagsinput" id="typeahead" name="tipo" required="required" placeholder="Tipo da empresa"/>
                    <!-- Tipo de empresa --> 
                                            

                    <!-- Editor de texto da descrição do empresa-->
                    <label><h4 class="widgettitle">Cadastre um conteúdo de descrição para a empresa</h4></label>
                    <textarea  class="ckeditor" name="editor1" id="editor1"></textarea>      
                    <!-- Fim do  Editor de texto da descrição do empresa-->         

                    <!-- Botão de Cadastrar empresa-->
    						    <center><button id="SubmitBtn" name="SubmitBtn" type="submit" class="btn btn-large btn-inverse">Cadastrar Empresa</button></center> 
                    <!-- Fim do Botão de Cadastrar empresa-->
  						    
                  </form>
						    </div>
						  </div>                         
            </div>
          </div>

                <!-- Place inside the <head> of your HTML -->
  <script src="/admin/js/jquery-1.9.1.min.js" type="text/javascript"></script>
  <script src="/editor/ckeditor.js" type="text/javascript"></script>
  <script src="/admin/js/chosen.jquery.js" type="text/javascript"></script>
  <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.12.0/jquery.validate.min.js" type="text/javascript"></script>
  <script src="/admin/js/bootstrap.min.js" type="text/javascript"> </script>
  <script src="/admin/js/bootstrap-tagsinput.min.js" type="text/javascript"> </script>
  <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>


  <script type="text/javascript">

      $('#typeahead').tagsinput({
        typeahead: {  
                        
          source: function(query) {
            return $.get('/mg-admin/loadCategoriaEmpresas/', { nome: query});
          }
        },
        maxTags: 1
      });    


    var nome_empresa = $("#nome_empresa");
    var LoginForm = $('#LoginForm');
    var SubmitBtn = $('#SubmitBtn');
 
    LoginForm.validate();
 
    nome_empresa.rules("add", {
      required: true,
      messages: {
        required: "Nome da empresa é obrigatório."
      }
    });
 
    $('#LoginForm').submit(function () {
      if ($(this).valid()) {
        $('#SubmitBtn').prop('disabled', true);
        return true;
      }
      return false;
    });

