    $('#typeahead').typeahead({
          source: function (query, process) {
              return $.getJSON(
                  'loadparceiros',
                  { nome: query },
                  function (data) {
                      var newData = [];
                      console.log("data " + data);
                      $.each(data, function(){
                        console.log("data2 " + this.nome_parceiro);
                          newData.push(this.nome_parceiro);
                      });
                      return process(newData);

                  }); 
          }

      });

       $('#datainicio').datetimepicker({
        format: 'dd/MM/yyyy hh:mm:ss',
        language: 'pt-BR'
      });

      $(document).ready(function () {
      var datainicio = $("#datainicio");
      var titulo = $("#titulo");
      var LoginForm = $('#LoginForm');
      var SubmitBtn = $('#SubmitBtn');
   
      LoginForm.validate();
   
      datainicio.rules("add", {
        required: true,
        length: 9,
        messages: {
          required: "Você deve preencher data de início",
          rangelength: "Data inválida"
        }
      });
      titulo.rules("add", {
        required: true,
        messages: {
          required: "Titulo é obrigatório."
        }
      });
   
      $('#LoginForm').submit(function () {
        if ($(this).valid()) {
          $('#SubmitBtn').prop('disabled', true);
          return true;
        }
        return false;
      });
   
    });

