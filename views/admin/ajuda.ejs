<!DOCTYPE html>

<% include admin-header %> 
 <% if (message) { %>
        <div class="alert alert-success"><%= message %></div>
    <% } %>
          <div class="row-fluid">

             <div class="panel panel-primary">  

                <div class="panel-body">
                  <form id="LoginForm" role="form" class="form-horizontal" enctype="multipart/form-data" autocomplete="off"  method="post">

                    <fieldset>

                    <!-- Text input-->
                    <div class="control-group">
                      <label class="control-label" for="textinput">Nome</label>
                      <div class="controls">
                        <input id="textinput" name="textinput" type="text" placeholder="" class="input-xlarge">
                        
                      </div>
                    </div>

                    <!-- Text input-->
                    <div class="control-group">
                      <label class="control-label" for="email">E-mail</label>
                      <div class="controls">
                        <input id="email" name="email" type="text" class="input-xlarge" value"<%=user.local.email%>">
                        
                      </div>
                    </div>

                    <!-- Select Basic -->
                    <div class="control-group">
                      <label class="control-label" for="assunto">Assunto</label>
                      <div class="controls">
                        <select id="assunto" name="assunto" class="input-xlarge">
                          <option>Bug/Erro</option>
                          <option>Comercial</option>
                          <option>Dúvidas</option>
                          <option>Parcerias</option>
                          <option>Sugestões</option>
                          <option>Outros Assuntos</option>
                        </select>
                      </div>
                    </div>

                    <!-- Button Drop Down -->
                    <div class="control-group">
                      <label class="control-label" for="buttondropdown">Anexo</label>
                      <div class="controls">
                        <div class="input-append">
                          <input id="buttondropdown" name="buttondropdown" class="input-xlarge" placeholder="Selecione um anexo" type="text">
                          <div class="btn-group">
                            <button class="btn dropdown-toggle" data-toggle="dropdown">
                              Upload
                              <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                              <li><a href="#">Selecionar Arquivo</a></li>
                              <li><a href="#">Alterar</a></li>
                            </ul>
                          </div>
                        </div>
                      </div>
                    </div>

                    <!-- Textarea -->
                    <div class="control-group">
                      <label class="control-label" for="mensagem">Mensagem</label>
                      <div class="controls">                     
                        <textarea required type="text" id="mensagem" name="mensagem"> </textarea>
                      </div>
                    </div>

                    <center><button id="SubmitBtn" name="SubmitBtn" type="submit" class="btn btn-large btn-inverse">Enviar Mensagem</button></center>


                    </fieldset>
                    </form>

                </div>
              </div>                         

          </div>

<% include admin-footer %> 
