      });

      $(document).ready(function () {
      var datainicio = $("#datainicio");
      var titulo = $("#titulo");
      var LoginForm = $('#LoginForm');
      var SubmitBtn = $('#SubmitBtn');
   
      LoginForm.validate();
   
      datainicio.rules("add", {
        required: true,
        length: 9,
        messages: {
          required: "Você deve preencher data de início",
          rangelength: "Data inválida"
        }
      });
      titulo.rules("add", {
        required: true,
        messages: {
          required: "Titulo é obrigatório."
        }
      });
   
      $('#LoginForm').submit(function () {
        if ($(this).valid()) {
          $('#SubmitBtn').prop('disabled', true);
          return true;
        }
        return false;
      });
   
    });

