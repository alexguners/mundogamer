<!DOCTYPE html>

<% include admin-header %>   
 <% if (message.length>0) { %>
        <div class="alert alert-success"><%= message %></div>
    <% } %>
          <div class="row-fluid">
            <div id="dashboard-left" class="span8">
             <div class="panel panel-primary"> 

                <div class="panel-body">
  					        <form id="LoginForm" role="form" class="form-horizontal" autocomplete="off"  method="post">
                    <!-- Id da Plataforma -->
                    <input type="hidden" value="<%= plataforma.id %>" name="id" />

                    <!-- Título da Notícia -->
                    <p>
                      <label>Nome da Plataforma</label>
                      <input type="text" class="input-block-level" id="nome_plataforma" name="nome_plataforma" placeholder="Digite o nome da plataforma" required="required" value="<%= plataforma.nome_plataforma %>" />
                    </p>
                    <!-- Fim Título da Notícia -->

                    <!-- Data de Lançamento -->
                    <p>
                       <label>Data de lançamento</label>
                       <input type="text" name="lancamento_plataforma" id="lancamento_plataforma" maxlength="10" placeholder="Exemplo 01/01/2014" onkeypress="return dateMask(this, event);" value="<% var d = new Date(plataforma.lancamento_plataforma); 
                        %><%= ('0' + d.getDate()).slice(-2) + '/' + ('0' + (d.getMonth()+1)).slice(-2) + '/'  + d.getFullYear() %>"/>

                    </p>
                    <!-- Fim Data de Lançamento -->

                    <!-- Empresa Responsavel -->
                    <p>
                      <label>Empresa responsável</label>
                      <input type="text" class="form-control" id="empresa_responsavel" name="empresa_responsavel" placeholder="Empresa responsável" required="required" value="<%= plataforma.empresa_responsavel %>" />
                   </p>
                   <!-- Fim da Empresa Responsavel -->

                        <!-- Tipo de Plataforma-->
                        <p>
                            <label>Tipo de console</label>
                                <select name="tipo_plataforma" id="tipo_plataforma" required="required">
                                  <option value="<%= plataforma.tipo_plataforma %>"><%= plataforma.tipo_plataforma %></option>
                                    <option value="Console de Videogame">Console de Videogame</option>
                                    <option value="Console portátil">Console portátil</option>                                
                                    <option value="Celular/Tablet">Celular/Tablet</option>
                                    <option value="Outros">Outros</option>
                                </select> 

                        </p>
                        <!-- Fim do Tipo de Plataforma -->

                        <p>
                            <label>Mídia suportada</label>
                                <select name="tipomidia_plataforma" id="tipomidia_plataforma" required="required">
                                  <option value="">Selecione um tipo</option>
                                    <option value="Disco de Blu-ray">Disco de Blu-ray</option>
                                    <option value="CD/CD-ROM">CD/CD-ROM</option>
                                    <option value="DVD">DVD</option>                                
                                    <option value="Cartucho/Fita">Cartucho/Fita</option>
                                    <option value="Mídia Digital">Mídia Digital</option>
                                    <option value="Outros">Outros</option>
                                </select> 

                        </p>
                        <!-- Fim do Tipo de mídia  Plataforma -->

                        <!--  Geração da Plataforma-->
                        <p>
                            <label>Geração da Plataforma</label>
                                <select name="geracao_plataforma" id="geracao_plataforma" required="required">
                                  <option value="<%= plataforma.geracao_plataforma %>"><%= plataforma.geracao_plataforma %></option>
                                    <option value="1º geração">1º geração</option>
                                    <option value="2º geração">2º geração</option>                                
                                    <option value="3º geração">3º geração</option>
                                    <option value="4º geração">4º geração</option>
                                    <option value="5º geração">5º geração</option>
                                    <option value="6º geração">6º geração</option>
                                    <option value="7º geração">7º geração</option>
                                    <option value="8º geração">8º geração</option>                                                                    
                                </select> 
                        </p>
                        <!--  Geração da Plataforma -->

                   <!-- Endereço site oficial da plataforma -->
                    <p>
                        <label>Site oficial</label>
                        <input type="text" id="site_plataforma" name="site_plataforma" placeholder="Site oficial da plataforma" />
                        <span class="help-block" value="<%= plataforma.site_plataforma %>"></span>   
                    </p>
                    <!-- Fim do  site oficial da plataforma -->

                        <!-- Campo Twitter da Plataforma -->
                        <p>
                           <label>Perfil Twitter</label>
                           <div class="input-prepend">
                              <span class="add-on">@</span>
                           <input type="text"  placeholder="@Usuário" id="twitter_plataforma" name="twitter_plataforma" class="input-block-level" value="<%= plataforma.twitter_plataforma %>"/>
                           </div>
                        </p>
                        <!-- Fim Campo Twitter da Plataforma -->

                        <!-- Campo Facebook da Plataforma -->
                        <p>
                           <label>Página Facebook</label>
                           <div class="input-prepend">
                              <span class="add-on">www.facebook.com/</span>
                           <input type="text" name="facebook_plataforma" id="facebook_plataforma" class="input-block-level" placeholder="http://www.facebook.com/minhapagina" value="<%= plataforma.facebook_plataforma %>"/>
                           </div>
                        </p>
                        <!-- FIM do Campo Facebook da Plataforma -->

                        <!-- Campo Instagram da Plataforma -->
                        <p>
                           <label>Instagram</label>
                           <div class="input-prepend">
                              <span class="add-on">www.instagram.com/</span>
                           <input type="text" name="instagram_plataforma" id="instagram_plataforma" class="input-block-level" placeholder="Endereço Instagram" value="<%= plataforma.instagram_plataforma %>"/>
                           </div>
                        </p>
                        <!-- Fim do Campo Instagram da Plataforma -->

                        <!-- Campo Canal do Youtube da Plataforma -->
                        <p>
                          <label>Canal Youtube</label>
                          <div class="input-prepend">
                              <span class="add-on">www.youtube.com/</span>
                          <input type="text" name="youtube_plataforma" id="youtube_plataforma" class="input-block-level" placeholder="Endereço do canal" value="<%= plataforma.youtube_plataforma %>" />
                          </div>
                        </p>
                        <!-- Fim do Campo Canal do Youtube da Plataforma -->

                        <!-- Editor de texto da plataforma-->
                        <p>
                          <label><h4 class="widgettitle">Cadastre uma descrição para a plataforma</h4></label>  
                          <textarea  class="ckeditor" name="editor1" id="editor1"><%= plataforma.descricao_plataforma %></textarea>
                        </p>
                        <!-- Fim do  Editor de texto da plataforma-->

                        <!-- Fonte das informações -->
                        <p>
                         <label><h4 class="widgettitle">Caso sua descrição seja conteúdo de terceiros preencha os campos a seguir</h4></label>
                            <label>Nome da fonte de origem do conteúdo</label>
                            <% if (typeof plataforma.nome_fonte !== 'undefined'){ %>
                              <% if (plataforma.nome_fonte !== 'undefined'){ %> 
                              <input type="text" class="input-block" id="nome_fonte" name="nome_fonte" placeholder="Nome da Fonte" value="<%= plataforma.nome_fonte %>"/> 
                            <%}%>
                            <%} else{ %>
                              <input type="text" class="input-block" id="nome_fonte" name="nome_fonte" placeholder="Nome da Fonte" value=""/>
                            <%}%>
                            
                            <label>Insira o endereço de acesso original do conteúdo</label>
                            <% if (typeof plataforma.url_fonte !== 'undefined'){ %>
                              <% if (plataforma.url_fonte !== 'undefined'){ %>
                              <input type="text" class="input-block-level" id="url_fonte" name="url_fonte" placeholder="URL de destino do conteúdo" value="<%= plataforma.url_fonte %>" />
                            <%}%>
                            <%} else{ %>
                              <input type="text" class="input-block-level" id="url_fonte" name="url_fonte" placeholder="URL de destino do conteúdo" value="" />
                            <%}%>  
                        </p>
                        <!-- Fim das informações -->

                        <!-- Botão de Publicar notícia-->
                        <p>
                         <center><button id="SubmitBtn" name="SubmitBtn" type="submit" class="btn btn-large btn-inverse">Editar plataforma</button></center>
                        </p>   
                        <!-- Fim do Botão de Publicar notícia-->
                  </form>
						    </div>
						 </div>         
            </div>
        </div>
                <!-- Place inside the <head> of your HTML -->


    <script src="/editor/ckeditor.js"></script>
      <script type="text/javascript"
     src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js">
    </script> 
    <script type="text/javascript"
     src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.12.0/jquery.validate.min.js">
    </script>
    
    <script type="text/javascript"
     src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js">
    </script>
  
    <script src="//connect.facebook.net/pt_BR/all.js"></script>
    <script> 
    	$(document).ready(function () {
    var nome_plataforma = $("#nome_plataforma");
    var tipo_plataforma = $("#tipo_plataforma");
    var LoginForm = $('#LoginForm');
    var SubmitBtn = $('#SubmitBtn');
 
    LoginForm.validate();
 
    nome_plataforma.rules("add", {
      required: true,
      messages: {
        required: "Nome da plataforma é obrigatório."
      }
    });
 
    $('#LoginForm').submit(function () {
      if ($(this).valid()) {
        $('#SubmitBtn').prop('disabled', true);
        return true;
      }
      return false;
    });
 
  });
	</script>

<script type="text/javascript">

	jQuery(document).ready(function(){
		
		jQuery('.taglist .close').click(function(){
			jQuery(this).parent().remove();
			return false;
		});
		
	});
</script>


<% include admin-footer %>    


