<!DOCTYPE html>

<% include admin-header %>   
 <% if (message) { %>
        <div class="alert alert-success"><%= message %></div>
    <% } %>
          <div class="row-fluid">
            <div id="dashboard-left" class="span8">
             <div class="panel panel-primary">  

                <div class="panel-body">
                  <form id="LoginForm" role="form" class="form-horizontal" enctype="multipart/form-data" autocomplete="off"  method="post">

                    <!-- Imagem de capa da notícia -->
                    <center>
                    <p>
                      <div class="par">
                          <label>Capa da publicação (Tamanho recomendado 300x200 pixels até 100k)</label>
                          <div class="fileupload fileupload-new" data-provides="fileupload">
                            <div class="fileupload-preview thumbnail" style="width: 300px; height: 200px;"></div>
                            <div class="input-append">
                                <div class="uneditable-input span3">
                                  <i class="iconfa-file fileupload-exists"></i>
                                  <span class="fileupload-preview"></span>
                                </div>
                                <span class="btn btn-file"><span class="fileupload-new">Selecione uma imagem</span>
                                <span class="fileupload-exists">Alterar</span>
                                <input type="file" accept="image/*" class="form-control" id="capa" name="capa" required="required" /> 
                                <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remover</a>
                            </div>
                          </div>
                     </div>                                         
                    </p>
                    </center> 
                    <!-- Fim da Imagem de capa da notícia -->

                    <!-- Título da Notícia -->
                    <p>
                      <label for="titulo">Cadastre um título para sua análise</label>
                      <input type="text" class="input-block-level" id="titulo" name="titulo" placeholder="Digite o titulo da análise" required="required" />
                    </p>
                    <!-- Fim Título da Notícia -->

                    <!-- Data de Publicação -->
                    <p>
                      <div id="datainicio">
                        <label for="datafinal">Selecione a data inicial de exibição</label>
                        <input type="text" class="form-control" name="datainicio" id="datainicio" required="required"></input>
                          <span class="add-on">
                            <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
                          </span>
                      </div>
                    </p>
                    <!-- Fim da Data de Publicação -->

                    <!-- Parceiro da publicação-->
                    <p>
                        <label>Selecione um parceiro para divulgação em sua publicação</label>
                            <span class="field">
                            <select name="parceiro" id="parceiro" class="uniformselect" required="required">
                              <option value="">Selecione um parceiro</option>
                              <option value="ClubedaNuna">Clube da Nuna</option>
                              <option value="GlobalGames">Global Games</option>
                              <option value="JogosIndie">Jogos Indie</option>
                              <option value="MundoGamer">Mundo Gamer</option>
                              <option value="Nintedolátras">Nintedolátras</option>
                              <option value="Pechinchador">Pechinchador</option>
                              <option value="Player2">Player 2</option>
                              <option value="ResidentEvilDatabase">Resident Evil Database</option>
                              <option value="X-Nerd">X-Nerd</option>
                            </select>
                            </span>
                    </p>
                    <!-- Fim do Parceiro da publicação --> 

                    <!-- Editor de texto da notícia-->
                    <p>
                      <label><h4 class="widgettitle">Cadastre um conteúdo de descrição para sua análise</h4></label>                    
                      <textarea  class="ckeditor" name="editor1" id="editor1"></textarea>
                    </p>
                    <!-- Fim do  Editor de texto da notícia-->

                    <!-- Botão de Publicar notícia-->
                      <p>
                        <center><button id="SubmitBtn" name="SubmitBtn" type="submit" class="btn btn-large btn-inverse">Cadastrar Análise</button></center>
                      </p>   
                    <!-- Fim do Botão de Publicar notícia-->
                  </form>
                </div>
              </div>                         
            </div>
          </div>
                <!-- Place inside the <head> of your HTML -->

    <script src="/editor/ckeditor.js"></script>
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script> 
    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.12.0/jquery.validate.min.js"></script>
    <script type="text/javascript" src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.min.js">
    </script>
    <script type="text/javascript" src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.pt-BR.js">
    </script>
  <script type="text/javascript">

      $('#datafinal').datetimepicker({
        format: 'dd/MM/yyyy hh:mm:ss',
        language: 'pt-BR'
      });

       $('#datainicio').datetimepicker({
        format: 'dd/MM/yyyy hh:mm:ss',
        language: 'pt-BR'
      });

      $(document).ready(function () {
      var datainicio = $("#datainicio");
      var titulo = $("#titulo");
      var LoginForm = $('#LoginForm');
      var SubmitBtn = $('#SubmitBtn');
   
      LoginForm.validate();
   
      datainicio.rules("add", {
        required: true,
        length: 9,
        messages: {
          required: "Você deve preencher data de início",
          rangelength: "Data inválida"
        }
      });
      titulo.rules("add", {
        required: true,
        messages: {
          required: "Titulo é obrigatório."
        }
      });
   
      $('#LoginForm').submit(function () {
        if ($(this).valid()) {
          $('#SubmitBtn').prop('disabled', true);
          return true;
        }
        return false;
      });
   
    });

</script>

<% include admin-footer %>    