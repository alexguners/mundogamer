<!DOCTYPE html>
<% include admin-header %>  

                <table class="table table-bordered responsive" id="dyntable">
                    <colgroup>
                        <col class="con0" style="align: center; width: 4%" />
                        <col class="con1" />
                        <col class="con0" />
                        <col class="con1" />
                        <col class="con0" />
                        <col class="con1" />
                    </colgroup>
                    <thead>
                        <tr>
                            <th class="head0 nosort"><input type="checkbox" class="checkall" /></th>
                            <th class="head1">Imagem</th>
                            <th class="head0">Nome do Evento</th>
                            <th class="head1">Descrição</th>
                            <th class="head0">Notícias</th>
                            <th class="head1">Ver/Editar</th>
                        </tr>
                    </thead>
                    <tbody>

                    <% for(var i=0; i<coberturas.length; i++) {%>
                        <tr class="gradeX">
                            <td class="aligncenter">
                                <span class="center">
                                    <input type="checkbox" />
                                </span>
                            </td>
                            <td class="center">       
                             <a href="../coberturas/<%= coberturas[i].url %> "target="_blank"><img src="/images/wikigamer/coberturas/capas/<%= coberturas[i].id %>"/></a>
                            </td>

                            <td class="center"><%= coberturas[i].nome_evento %></td>
                            <td class="center">
                            <% if (typeof coberturas[i].descricao !== 'undefined'){ %>
                                <% if((coberturas[i].descricao == 'undefined') || (coberturas[i].descricao == '') ){ %>
                                    <span class="label label-danger">Sem descrição cadastrada</span>
                                    <%}else { %>
                                      <%= coberturas[i].descricao.toString().replace(/<.*?>/g, '').substr(0,60) %>...
                                    <%}%>
                                <%}%>
                            </td>
                            <td class="center"></td>
                            <td class="center">
                                <a href="/mg-admin/editarcobertura/<%= coberturas[i].id %>" data-toggle="modal" class="btn btn-inverse">
                                    <i class="iconfa-pencil"></i>
                                </a>
                            </td>

                        </tr>
                        <% } %>

                    </tbody>
                </table>
                    
                <div class="divider30" ></div> 
                                        <ul class="list-nostyle list-inline" align="right">
                                            <li><a href="/mg-admin/cadastrarcobertura" class="btn btn-inverse btn-rounded" > <i class=" iconfa-plus"></i> &nbsp; Cadastrar Evento</a></li>
                                        </ul>


                    </div><!--span4-->
                </div><!--row-fluid--> 

    <!-- Script para busca, paginações das notícias -->
    <script type="text/javascript">
        jQuery(document).ready(function(){
            // dynamic table
            jQuery('#dyntable').dataTable({
                "sPaginationType": "full_numbers",
                "aaSortingFixed": [[0,'asc']],
                "fnDrawCallback": function(oSettings) {
                    jQuery.uniform.update();
                }
            });
            
            
            
        });
    </script>

<% include admin-footer %>    