                         <td align="center"><small><%= personagem.nome_personagem %></small></td>
                      </tr>
                      <%} if ( (personagem.data_nascimento !== 'undefined') && (personagem.data_nascimento !== '') ) { %> 
                      <tr>
                         <td><span class="label label-primary">Nascido em</span></td>
                         <td align="center"><small><% var d = new Date(personagem.data_nascimento); 
                          %><%= ('0' + d.getDate()).slice(-2) + '/' + ('0' + (d.getMonth()+1)).slice(-2) + '/'  + d.getFullYear() %></small></td>
                      </tr>
                      <%} if ( (personagem.genero_personagem !== 'undefined') && (personagem.genero_personagem !== '') ) { %> 
                      <tr>
                         <td><span class="label label-primary">Gênero</span></td>
                         <td align="center"><small><%= personagem.genero_personagem %></small></td>
                      </tr>
                      <%} if ( (personagem.criador_personagem !== 'undefined') && (personagem.criador_personagem !== '') ) { %>
                      <tr>
                         <td><span class="label label-primary">Criado por</span></td>
                         <td align="center"><small><%= personagem.criador_personagem %></small></td>
                      </tr>
                      <%} if ( (personagem.especie_personagem !== 'undefined') && (personagem.especie_personagem !== '') ) { %><tr>
                         <td><span class="label label-primary">Espécie</span></td>
                         <td align="center"><small><%= personagem.especie_personagem %></small></td>
                      </tr>
                      <%} if ( (personagem.origem_personagem !== 'undefined') && (personagem.origem_personagem !== '') ) { %> 
                      <tr>
                         <td><span class="label label-primary">País de origem</span></td>
                         <td align="center"><small><%= personagem.origem_personagem %></small></td>
                      </tr>
                      <%} if ( (personagem.planeta_personagem !== 'undefined') && (personagem.planeta_personagem !== '') ) { %><tr>
                         <td><span class="label label-primary">Nasceu no planeta</span></td>
                         <td align="center"><small><%= personagem.planeta_personagem %></small></td>
                      </tr>
                      <%} if ( (personagem.profissao_personagem !== 'undefined') && (personagem.profissao_personagem !== '') ) {%>
                      <tr>
                         <td><span class="label label-primary">Profissão</span></td>
                         <td align="center"><small><%= personagem.profissao_personagem %></small></td>
                      </tr>
                      <%} if ( (personagem.primeirojogo_personagem !== 'undefined') && (personagem.primeirojogo_personagem !== '') ) { %> 
