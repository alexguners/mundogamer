    <body onselectstart='return false' ondragstart='return false'>
       <% include navbar %> 
        <div class="container">
          <div class="col-md-12">
            <div class="login">
              <div class="login-screen">

                <form method="post" class="form-horizontal" role="form" onsubmit="return validarEmail()">
                  <div class="login-form">
                  <% if (typeof message !== 'undefined') { %>
                      <div class="alert alert-success"><%= message %></div>
                  <% } %>
                    <div class="form-group">
                      <input type="text" class="form-control login-field" value="" title='Preencha o campo nome'placeholder="Nome Completo" id="nome" name="nome" required /><br>
                      <input type="email" class="form-control login-field" value="" title='Por favor informe o e-mail corretamente' pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" placeholder="E-mail" id="email" name="email" required/><br>
                        <div>
                           <select name="herolist" value="X-Men" class="select-block" required>
                              <option value="0">Selecione a opção desejada</option>
                              <option value="Comercial">Comercial</option>
                              <option value="Dúvidas">Dúvidas</option>
                              <option value="Parceria">Parceria</option>
                              <option value="Sugestões">Sugestões</option>
                            </select>
                        </div>
                      <textarea required placeholder="Mensagem"type="text" class="form-control login-field" value=""  id="mensagem" name="mensagem"> </textarea>
                    </div>

                    <button class="btn btn-primary btn-lg btn-block" type="submit" >Enviar</button>

                  </div>
                </form>
              </div>
          </div>

